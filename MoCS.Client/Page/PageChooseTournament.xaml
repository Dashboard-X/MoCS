<Page x:Class="MoCS.Client.Page.PageChooseTournament"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:m="clr-namespace:MoCS.Client.Master"   
    xmlns:local="clr-namespace:MoCS.Client.Page"      
    Title="PageChooseTournament">

    <Page.CommandBindings>
        <CommandBinding Command="{x:Static local:PageChooseTournament.ChooseTournament}" Executed="OnChooseTournament" />
    </Page.CommandBindings>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Templates/TournamentTemplate.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <m:Master>
        <m:Master.Title>
            Choose Tournament
        </m:Master.Title>
        <m:Master.Content>
            <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True" Width="600">
                <StackPanel Name="PanelTournaments" Orientation="Vertical" >
                    <ItemsControl Margin="5" ItemsSource="{Binding}" ItemTemplate="{StaticResource TournamentTemplate}"  ScrollViewer.CanContentScroll="True"/>
                </StackPanel>
            </ScrollViewer>
        </m:Master.Content>
    </m:Master>
</Page>
